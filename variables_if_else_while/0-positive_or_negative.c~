#include <stdlib.h>
#include <time.h>
#include <stdio.h>
/**
 * main - Entry point
 *
 * Return: Always 0 (Success)
 */
int main(void)
{
int n;
srand(time(0));
n = rand() - RAND_MAX / 2;
if (n > 0)
{
char *str = "is positive";
printf("%d ", n); printf("%s\n", str);
}
else
{
if (n < 0)
{
char *str = "is negative";
printf("%d ", n); printf("%s\n", str);
}
else
{
char *str = "is zero";
printf("%d ", n); printf("%s\n", str);
}
}
return (0);
}
